<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="VacunaCheck"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Bienvenido al Home"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnConsultarUsuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/btnConsultarUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Consultar Usuario"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        />

    <Button
        android:id="@+id/btnMostrarDatos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mostrar datos registrados"
        app:layout_constraintTop_toBottomOf="@id/btnConsultarUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        />

    <Button
        android:id="@+id/btnCrearUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Crear Usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMostrarDatos" />



    <Button
        android:id="@+id/btnHistorialVacunas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Historial de Vacunas"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnCrearUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnAbrirCalendario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Abrir Calendario"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnHistorialVacunas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnEducacionyConsejos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="EducacionyConsejos"
        android:text="Educación y Consejos de Vacunación"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAbrirCalendario" />





</androidx.constraintlayout.widget.ConstraintLayout>
